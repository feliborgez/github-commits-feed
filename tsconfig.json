{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
